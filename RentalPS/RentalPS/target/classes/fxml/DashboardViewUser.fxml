<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="950.0" style="-fx-background-color:#050816;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DashboardControllerUser">

    <top>
        <HBox spacing="10" style="-fx-background-color:#050A18; -fx-padding:10 20 10 20;">
            <children>
                <Button fx:id="btnToggleMenuUser" focusTraversable="false" onAction="#toggleMenu" style="-fx-background-radius:999; -fx-background-color:#020617; -fx-text-fill:#E5E7EB; -fx-font-size:16; -fx-padding:4 10;" text="â˜°" />

                <Label style="-fx-text-fill: #E5E7EB; -fx-font-size: 22; -fx-font-weight: bold;" text="Petugas">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane fx:id="rootStack" style="-fx-background-color:#050816;">
            <StackPane fx:id="contentArea" style="-fx-background-color:#050816; -fx-padding:20;" />

            <VBox fx:id="sidebar" maxHeight="520" maxWidth="260" minWidth="260" prefWidth="260" spacing="18" style="-fx-background-color:#0B1120; -fx-padding:28 24 28 24; -fx-background-radius:18; -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.6), 25,0.3,0,4);" visible="false" StackPane.alignment="CENTER_LEFT">

                <StackPane.margin>
                    <Insets bottom="24" left="24" right="24" top="24" />
                </StackPane.margin>

                <children>
                    <Label style="-fx-text-fill:#22D3EE; -fx-font-size:26; -fx-font-weight:bold;" text="RENTAL PS" />

                    <Button fx:id="btnDashboardUser" onAction="#handleDashboardUser" style="-fx-background-color:transparent; -fx-text-fill:white; -fx-font-size:16; -fx-alignment:CENTER_LEFT; -fx-padding:10 14;" text="Dashboard" />

                    <Button fx:id="btnPSUser" onAction="#handlePSUser" style="-fx-background-color:transparent; -fx-text-fill:white; -fx-font-size:16; -fx-alignment:CENTER_LEFT; -fx-padding:10 14;" text="Data Konsol" />

                    <Button fx:id="btnTransaksiUser" onAction="#handleTransaksiUser" style="-fx-background-color:transparent; -fx-text-fill:white; -fx-font-size:16; -fx-alignment:CENTER_LEFT; -fx-padding:10 14;" text="Transaksi" />

                    <Region VBox.vgrow="ALWAYS" />

                    <Button fx:id="btnLogout" onAction="#handleLogout" style="-fx-background-color:transparent; -fx-text-fill:#FCA5A5; -fx-font-size:16; -fx-alignment:CENTER_LEFT; -fx-padding:10 14;" text="Log out" />
                </children>

            </VBox>
        </StackPane>
    </center>

</BorderPane>