<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="680" prefWidth="1000" spacing="15" style="-fx-padding: 15 30 20 30; -fx-background-color: #050B1E;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LaporanController">

    <VBox spacing="3">
        <Label style="-fx-text-fill:#00F7FF; -fx-font-size:22; -fx-font-weight:bold;" text="Laporan Transaksi" />
        <Label style="-fx-text-fill:#B0B5D9; -fx-font-size:12;" text="Ringkasan seluruh transaksi rental PS" />
    </VBox>

    <HBox spacing="15">
        <VBox alignment="CENTER" prefHeight="83.0" prefWidth="200.0" spacing="5" style="-fx-background-color:#0E1635; -fx-background-radius:10; -fx-padding:15;">
            <Label style="-fx-text-fill:#AAB2E3; -fx-font-size:12;" text="Total Transaksi" />
            <Label fx:id="lblTotalTransaksi" style="-fx-text-fill:white; -fx-font-size:20; -fx-font-weight:bold;" text="0" />
        </VBox>

        <VBox alignment="CENTER" prefHeight="83.0" prefWidth="200.0" spacing="5" style="-fx-background-color:#0E1635; -fx-background-radius:10; -fx-padding:15;">
            <Label style="-fx-text-fill:#AAB2E3; -fx-font-size:12;" text="Total Pendapatan" />
            <Label fx:id="lblPendapatan" style="-fx-text-fill:white; -fx-font-size:20; -fx-font-weight:bold;" text="Rp 0" />
        </VBox>
    </HBox>

    <VBox spacing="12" style="-fx-background-color:#0E1635; -fx-background-radius:15; -fx-padding:15;">

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-text-fill:white; -fx-font-size:15; -fx-font-weight:bold;" text="Filter Laporan" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-text-fill:#B0B5D9; -fx-font-size:12;" text="Tanggal:" />
            <DatePicker fx:id="dateAwal" />
            <Label style="-fx-text-fill:#B0B5D9;" text="s/d" />
            <DatePicker fx:id="dateAkhir" />
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="txtSearch" prefHeight="29.0" prefWidth="445.0" promptText="Cari transaksi..." style="-fx-background-radius:10; -fx-padding:6;" />
            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnFilter" style="-fx-background-color: #00ff88; -fx-text-fill: black; -fx-background-radius: 8; -fx-padding: 5 12; -fx-font-weight: bold;" text="Terapkan" />
            <Button fx:id="btnResetFilter" prefHeight="28.0" prefWidth="63.0" style="-fx-background-color: #ffc107; -fx-text-fill: black; -fx-background-radius: 8; -fx-padding: 5 12; -fx-font-weight: bold;" text="Reset" />
            <Button fx:id="btnRefresh" style="-fx-background-color: #00B0FF; -fx-text-fill: black; -fx-background-radius: 8; -fx-padding: 5 12; -fx-font-weight: bold;" text="Refresh" />
        </HBox>

        <TableView fx:id="tableLaporan" style="-fx-background-radius:10; -fx-padding:5; -fx-table-cell-border-color: transparent;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTanggal" prefWidth="120" text="Tanggal" />
                <TableColumn fx:id="colPelanggan" prefWidth="180" text="Pelanggan" />
                <TableColumn fx:id="colPs" prefWidth="160" text="Konsol" />
                <TableColumn fx:id="colDurasi" prefWidth="120" text="Durasi (Jam)" />
                <TableColumn fx:id="colTotal" prefWidth="150" text="Total (Rp)" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </VBox>

</VBox>
