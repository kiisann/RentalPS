<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="480" prefWidth="650" spacing="15" style="-fx-padding:20; -fx-background-color:#050816;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PSControllerUser">

    <Label style="-fx-text-fill:#E5E7EB; -fx-font-size:22; -fx-font-weight:bold;" text="Data Playstation" />

    <VBox prefWidth="620" spacing="10" style="-fx-background-color:#0F172A; -fx-background-radius:14; -fx-padding:14; -fx-effect:dropshadow(gaussian, rgba(15,23,42,0.6), 18,0.2,0,4);">

        <Label style="-fx-text-fill:#9CA3AF; -fx-font-size:13; -fx-font-weight:bold;" text="Daftar Konsol" />

        <TableView fx:id="tablePS" onMouseClicked="#handleTableClick" prefHeight="330" style="-fx-background-radius:10; -fx-table-cell-border-color: transparent; -fx-padding:5;">
            <columns>
                <TableColumn fx:id="colJenis" prefWidth="180" text="Konsol" />
                <TableColumn fx:id="colHarga" prefWidth="160" text="Harga/Jam" />
                <TableColumn fx:id="colStatus" prefWidth="160" text="Status" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox alignment="CENTER" prefWidth="620" spacing="10" style="-fx-background-color:#0F172A;-fx-background-radius:14; -fx-padding:10 14;">
        <Label style="-fx-text-fill:#E5E7EB; -fx-font-size:13;" text="Ubah Status:" />

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#setTersedia" style="-fx-background-color: #4CAF50; -fx-text-fill: #0B1120; -fx-font-weight: bold; -fx-background-radius: 999; -fx-padding: 5 16; -fx-text-fill: WHITE;" text="Tersedia" />

        <Button onAction="#setDisewa" style="-fx-background-color: #00B0FF; -fx-text-fill: WHITE; -fx-font-weight: bold; -fx-background-radius: 999; -fx-padding: 5 16;" text="Disewa" />
    </HBox>

</VBox>
