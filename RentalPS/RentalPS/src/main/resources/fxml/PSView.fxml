<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="680" prefWidth="1000" spacing="15" style="-fx-padding:10 30 20 30; -fx-background-color:#050B1E;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PSController">

    <VBox spacing="10" style="-fx-background-color:#0E1635; -fx-background-radius:15; -fx-padding:15;" VBox.vgrow="NEVER">

        <Label style="-fx-text-fill:white; -fx-font-size:15; -fx-font-weight:bold;" text="Data Konsol / Playstation" />

        <GridPane hgap="10" vgap="8">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="140" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label style="-fx-text-fill:white;" text="Jenis PS:" GridPane.rowIndex="0" />
            <TextField fx:id="txtJenisPS" promptText="Contoh: PS 3, PS 4, PS 5" style="-fx-background-radius:8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-text-fill:white;" text="Harga per Jam:" GridPane.rowIndex="1" />
            <TextField fx:id="txtHarga" promptText="Contoh: 5000" style="-fx-background-radius:8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-text-fill:white;" text="Status:" GridPane.rowIndex="2" />
            <ComboBox fx:id="cbStatus" promptText="Pilih status (tersedia / disewa)" style="-fx-background-radius:8;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button onAction="#simpan" style="-fx-background-radius: 10; -fx-font-weight: bold; -fx-padding: 6 20; -fx-background-color: #00ff88;" text="Simpan" />
            <Button onAction="#update" style="-fx-background-radius: 10; -fx-padding: 6 20; -fx-background-color: #448aff; -fx-text-fill: white; -fx-font-weight: bold;" text="Update" />
            <Button onAction="#hapus" style="-fx-background-radius: 10; -fx-padding: 6 20; -fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;" text="Hapus" />
            <Button onAction="#reset" style="-fx-background-radius: 10; -fx-padding: 6 18; -fx-background-color: #ffc107; -fx-font-weight: bold;" text="Reset" />
        </HBox>
    </VBox>

    <VBox spacing="8" style="-fx-background-color:#0E1635;-fx-background-radius:15; -fx-padding:15;" VBox.vgrow="ALWAYS">

        <Label style="-fx-text-fill:white; -fx-font-size:15; -fx-font-weight:bold;" text="Daftar Konsol" />

        <TableView fx:id="tablePS" onMouseClicked="#handleTableClick" style="-fx-background-radius:10; -fx-table-cell-border-color: transparent; -fx-padding:5;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colJenis" prefWidth="260" text="Konsol" />
                <TableColumn fx:id="colHarga" prefWidth="220" text="Harga/Jam" />
                <TableColumn fx:id="colStatus" prefWidth="180" text="Status" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

</VBox>
