<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rentalps.rentalps.controller.LoginController">

   <ImageView fitHeight="600.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../image/backgroundps.jpg" />
      </image>
   </ImageView>

   <TextField fx:id="txtUsername" layoutX="241.0" layoutY="253.0" prefHeight="35.0" prefWidth="418.0" promptText="Masukkan Username" style="-fx-background-radius: 10;">
      <font>
         <Font size="14.0" />
      </font></TextField>

   <PasswordField fx:id="txtPassword" layoutX="241.0" layoutY="333.0" prefHeight="35.0" prefWidth="418.0" promptText="Masukkan Password" style="-fx-background-radius: 10;">
      <font>
         <Font size="14.0" />
      </font></PasswordField>

   <Button fx:id="btnLogin" layoutX="411.0" layoutY="392.0" onAction="#handleLogin" prefHeight="29.0" prefWidth="78.0" style="-fx-background-color: #1e90ff; -fx-text-fill: white; -fx-background-radius: 10;" text="Masuk">
      <font>
         <Font size="14.0" />
      </font></Button>

   <Text layoutX="374.0" layoutY="211.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LOGIN">
      <font><Font name="Eras Bold ITC" size="45.0" /></font>
      <fill>
         <LinearGradient endY="0.66">
            <stops>
               <Stop><color><Color red="0.07" blue="0.74" /></color></Stop>
               <Stop offset="1.0"><color><Color red="0.47" blue="0.70" /></color></Stop>
            </stops>
         </LinearGradient>
      </fill>
   </Text>

   <Text layoutX="243.0" layoutY="243.0" text="Username">
      <font><Font name="SansSerif Regular" size="14.0" /></font>
   </Text>

   <Text layoutX="244.0" layoutY="321.0" text="Password">
      <font><Font name="SansSerif Regular" size="14.0" /></font>
   </Text>

</AnchorPane>
